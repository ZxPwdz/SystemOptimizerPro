<UserControl x:Class="SystemOptimizerPro.Controls.CircularProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="100">

    <Grid x:Name="RootGrid">
        <Viewbox>
            <Grid Width="100" Height="100">
                <!-- Background Circle -->
                <Ellipse x:Name="BackgroundCircle"
                         Stroke="{StaticResource BackgroundTertiaryBrush}"
                         StrokeThickness="8"
                         Fill="Transparent"/>

                <!-- Progress Arc -->
                <Path x:Name="ProgressPath"
                      Stroke="{StaticResource AccentPrimaryBrush}"
                      StrokeThickness="8"
                      StrokeStartLineCap="Round"
                      StrokeEndLineCap="Round"
                      Fill="Transparent">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure x:Name="PathFigure" StartPoint="50,5">
                                <ArcSegment x:Name="ArcSegment"
                                            Size="45,45"
                                            SweepDirection="Clockwise"
                                            IsLargeArc="False"
                                            Point="50,5"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>

                <!-- Center Text -->
                <TextBlock x:Name="ValueText"
                           Text="0%"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
