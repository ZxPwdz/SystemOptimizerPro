<UserControl x:Class="SystemOptimizerPro.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="24">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="Settings"
                       Style="{StaticResource HeadingStyle}"
                       Margin="0,0,0,24"/>

            <!-- General Settings -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="General"
                               Style="{StaticResource SubheadingStyle}"
                               Margin="0,0,0,16"/>

                    <!-- Start with Windows -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Start with Windows"
                                       Style="{StaticResource BodyStyle}"/>
                            <TextBlock Text="Launch System Optimizer Pro when Windows starts"
                                       Style="{StaticResource CaptionStyle}"/>
                        </StackPanel>

                        <CheckBox Grid.Column="1"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  IsChecked="{Binding StartWithWindows}"/>
                    </Grid>

                    <!-- Start Minimized -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Start Minimized"
                                       Style="{StaticResource BodyStyle}"/>
                            <TextBlock Text="Start the application minimized to system tray"
                                       Style="{StaticResource CaptionStyle}"/>
                        </StackPanel>

                        <CheckBox Grid.Column="1"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  IsChecked="{Binding StartMinimized}"/>
                    </Grid>

                    <!-- Minimize to Tray -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Minimize to Tray"
                                       Style="{StaticResource BodyStyle}"/>
                            <TextBlock Text="Minimize to system tray instead of taskbar"
                                       Style="{StaticResource CaptionStyle}"/>
                        </StackPanel>

                        <CheckBox Grid.Column="1"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  IsChecked="{Binding MinimizeToTray}"/>
                    </Grid>

                    <!-- Show Notifications -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Show Notifications"
                                       Style="{StaticResource BodyStyle}"/>
                            <TextBlock Text="Display notifications for cleaning operations"
                                       Style="{StaticResource CaptionStyle}"/>
                        </StackPanel>

                        <CheckBox Grid.Column="1"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  IsChecked="{Binding ShowNotifications}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Cleaning Settings -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Cleaning"
                               Style="{StaticResource SubheadingStyle}"
                               Margin="0,0,0,16"/>

                    <!-- Confirm Before Clean -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Confirm Before Cleaning"
                                       Style="{StaticResource BodyStyle}"/>
                            <TextBlock Text="Show confirmation dialog before cleaning operations"
                                       Style="{StaticResource CaptionStyle}"/>
                        </StackPanel>

                        <CheckBox Grid.Column="1"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  IsChecked="{Binding ConfirmBeforeClean}"/>
                    </Grid>

                    <!-- Create Registry Backup -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Create Registry Backup"
                                       Style="{StaticResource BodyStyle}"/>
                            <TextBlock Text="Always create a backup before registry cleaning"
                                       Style="{StaticResource CaptionStyle}"/>
                        </StackPanel>

                        <CheckBox Grid.Column="1"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  IsChecked="{Binding CreateRegistryBackup}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Auto-Purge Settings -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Memory Auto-Purge"
                               Style="{StaticResource SubheadingStyle}"
                               Margin="0,0,0,16"/>

                    <!-- Enable Auto-Purge -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Enable Auto-Purge"
                                       Style="{StaticResource BodyStyle}"/>
                            <TextBlock Text="Automatically purge standby list when thresholds are met"
                                       Style="{StaticResource CaptionStyle}"/>
                        </StackPanel>

                        <CheckBox Grid.Column="1"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  IsChecked="{Binding AutoPurgeEnabled}"/>
                    </Grid>

                    <Grid IsEnabled="{Binding AutoPurgeEnabled}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,12,16">
                            <TextBlock Text="Standby Threshold (MB)"
                                       Style="{StaticResource CaptionStyle}"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding StandbyThresholdMB, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="0" Margin="12,0,0,16">
                            <TextBlock Text="Free Memory Threshold (MB)"
                                       Style="{StaticResource CaptionStyle}"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding FreeMemoryThresholdMB, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,12,0">
                            <TextBlock Text="Polling Rate (ms)"
                                       Style="{StaticResource CaptionStyle}"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding PollingRateMs, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="1" Margin="12,0,0,0">
                            <TextBlock Text="Monitor Refresh Rate (ms)"
                                       Style="{StaticResource CaptionStyle}"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding MonitoringRefreshRateMs, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- About / Actions -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="About"
                               Style="{StaticResource SubheadingStyle}"
                               Margin="0,0,0,16"/>

                    <TextBlock Style="{StaticResource BodyStyle}" Margin="0,0,0,8">
                        <Run Text="System Optimizer Pro v"/>
                        <Run Text="{Binding AppVersion}"/>
                    </TextBlock>

                    <TextBlock Text="Modern system optimization and memory management tool for Windows"
                               Style="{StaticResource CaptionStyle}"
                               Margin="0,0,0,4"/>

                    <TextBlock Style="{StaticResource CaptionStyle}"
                               Margin="0,0,0,16">
                        <Run Text="Created by"/>
                        <Run Text="ZxPwd" FontWeight="SemiBold" Foreground="{StaticResource AccentPrimaryBrush}"/>
                    </TextBlock>

                    <StackPanel Orientation="Horizontal">
                        <Button Style="{StaticResource SecondaryButton}"
                                Command="{Binding OpenDataFolderCommand}"
                                Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE838;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Open Data Folder"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SecondaryButton}"
                                Command="{Binding ResetToDefaultsCommand}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE777;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Reset to Defaults"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <TextBlock Text="{Binding StatusMessage}"
                               Style="{StaticResource CaptionStyle}"
                               Margin="0,12,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
